*COPY FILRFIL
/* LIB_register_file - files of interest */
/* EXECLIB: FILRFIL  */
LIB_Register_File:
  arg fileindex filespec

  file.fileindex.name = word(filespec,1)
  file.fileindex.type = word(filespec,2)
  file.fileindex.mode = word(filespec,3)

  call LIB_Refresh_File_Data fileindex

return rc